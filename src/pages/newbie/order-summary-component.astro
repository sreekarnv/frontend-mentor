---
import { ArrowLeft } from "lucide-astro";
import HtmlLayout from "../../components/html-layout.astro";
import {Image} from "astro:assets"
import desktopBg from "../../assets/images/order-summary-component/pattern-background-desktop.svg"
import illustrationHero from "../../assets/images/order-summary-component/illustration-hero.svg"
import iconMusic from "../../assets/images/order-summary-component/icon-music.svg"
---

<HtmlLayout title="Order Summary Component">
    <Fragment slot="head">        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@500;700;900&display=swap" rel="stylesheet">
    </Fragment>
    <Fragment slot="header" >    
        <a href={import.meta.env.BASE_URL} class="hidden md:block absolute p-3 shadow hover:shadow-lg z-20 focus-visible:shadow-lg rounded-full bg-white top-2 left-2">
            <ArrowLeft />
        </a>
    </Fragment>
    <div class="h-screen flex items-center justify-center bg-osc-pale-blue font-osc-font-family font-semibold px-4 lg:px-0" >
        <Image src={desktopBg} alt="Desktop BG" class="w-full absolute top-0 left-0 z-10" />
        <div class="bg-white h-[600px] w-[450px] z-20 rounded-2xl overflow-hidden flex flex-col gap-6 shadow-lg shadow-osc-pale-blue">
            <Image src={illustrationHero} alt="Hero" />
            <h1 class="text-center font-black text-3xl text-osc-dark-blue" >Order Summary</h1>
            <p class="text-center text-osc-desaturated-blue px-10">You can now listen to millions of songs, audiobooks, and podcasts on any device anywhere you like!</p>
            <div class="flex items-center justify-around" >
                <div class="flex items-center gap-3" >
                    <Image src={iconMusic} alt="Music Icon" />
                    <div>
                        <h6 class="font-black text-osc-dark-blue" >Annual Plan</h6>
                        <p class="font-bold text-osc-desaturated-blue" >$59.99/year</p>
                    </div>
                </div>
                <a class="underline text-osc-bright-blue hover:no-underline hover:opacity-80 transition-all duration-200 ease-out" href="#change">Change</a>
            </div>
            <button class="bg-osc-bright-blue text-osc-pale-blue py-3 px-4 rounded-xl mx-10 hover:opacity-80 transition-all duration-200 ease-out" >Proceed to Payment</button>
            <button class="text-osc-desaturated-blue mx-10 hover:text-osc-dark-blue transition-all ease-out duration-200">Cancel Order</button>
        </div>
    </div>
</HtmlLayout>

